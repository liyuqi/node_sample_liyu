<!DOCTYPE html>
<html>
<head>
  <title><%=title %></title>
</head>
<body>

  <% if (resp) { %>
<legend>全部 Alert 結果</legend><br/>
    <% if (resp.length==0) { %>
	<%var now = new Date()%>
      <h4><%= now.toLocaleTimeString() %> 查無資料!</h4>
    <% } else{ %>
    <table class="table table-hover" id='table'>
      <thead>
        <tr>
          <th>Level</th>
          <th>Timestamp</th>
          <th>Message</th>
          <th>Id</th>
          <th>Host</th>
        </tr>
      </thead>
    <tbody>
    <% resp.forEach( function( body ){ %>
    <tr>
      <td><%= body.level %></td>
      <%if(body.timestamp) {  
      if(body.timestamp.toString().length>12){%>
        <td><%= body.timestamp %></td>
      <% } else { %>
        <td><%= body.timestamp %></td>
      <% } } %>
      <td><%= body.message %></td>
      <td><%= body._id %></td>
       <% if( body.host ){%>
      <td><%= body.host.ip %></td>
       <% } %>
    </tr>
    <% }); %>
  </tbody>
</table>
   <% } %>
<% } %>

  <div>
  <% if (!isFirstPage) { %>
    <span class="prepage"><a title="上一页" href="?p=<%= page-1 %>"><上頁 </a></span>
  <% } %>

  <% if (!isLastPage) { %>
    <span class="nextpage"><a title="下一页" href="?p=<%= page+1 %>"> 下頁></a></span>
  <% } %>
</div>
</body>
</html>
