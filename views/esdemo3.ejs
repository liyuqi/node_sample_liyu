  hits:
   [ { _index: 'blog',
       _type: 'post',
       _id: '5',
       _score: 1,
       _source: [Object] },
     { _index: 'blog',
       _type: 'post',
       _id: '4',
       _score: 1,
       _source: [Object] } ] }
        <p></p>
  hits.hits[0] : { _index: 'blog',
  _type: 'post',
  _id: '5',
  _score: 1,
  _source:
   { title: 'test new ',
     content: 'test test test test test ',
     date: '2014-03-25' } }
     <p></p>
<% if (resp) { %>
<h2>搜尋結果</h2>
    <p>total : <%= resp.total %></p>
    <% resp.hits.forEach( function( body ){ %>
       <p>id :<%= body._id %> : source :<%= body._source.title %></p>
       <p>date :<%= body._source.date %> : content :<%= body._source.content %></p>
       <p>----------------------------------------</p>
    <% }); %>

<% } else { %>
   <h3>No index</h3>
<% } %>

  </body>
</html>