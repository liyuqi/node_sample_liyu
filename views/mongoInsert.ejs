        <p></p>
<% if (resp) { %>
<h3>儲存完成</h3>
    <p>Level : <%= resp.level %></p>
    <p>Timestamp : <%= resp.timestamp %></p>
    <p>_id : <%= resp._id %></p>
    <p>Log Message : <%= resp.message %></p>
    <p>Client ip : <%= resp.host.ip %></p>
<% } else { %>
   <h3></h3>
<% } %>
  </body>
</html>
